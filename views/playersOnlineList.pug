html
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        style
            include style.css
        title= "Tibiantis Contact List by Krwawy Ork"
    body

include header.pug
include navigationbar.pug

div(class="content-container")
    if(playersOnlineArray.length)
        table
            tr 
                th Name
                th Vocation
                th Level
                th Actions
                    for val, index in playersOnlineArray
                        tr 
                            td=`${val.name}`                   
                            td=`${val.vocation}`
                            td=`${val.level}`
                            td
                                a(class="btn-add" href=`/add-contact-by-name/${val.name}`) +

    else
        div(class="alert-message")
            p(style={margin: '0 2rem 0 0'}) The list cannot be retrieved from the server.
            a(class="btn-delete" onclick="this.parentElement.style.display='none';") &times;